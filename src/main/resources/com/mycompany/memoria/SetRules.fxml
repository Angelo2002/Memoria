<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.memoria.SetRulesController"
            prefHeight="400.0" prefWidth="600.0">
<VBox alignment="CENTER" spacing="10" layoutX="150" layoutY="50">
    <Label text="Configurar Reglas" style="-fx-font-size: 24px;"/>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Número mínimo de jugadores:"/>
        <Spinner fx:id="minPlayersSpinner"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Número máximo de jugadores:"/>
        <Spinner fx:id="maxPlayersSpinner" />
    </HBox>
    <!-- Agrega más campos de entrada y botones aquí según las reglas que desees configurar -->

    <HBox alignment="CENTER" spacing="10">
        <Button text="Guardar" onAction="#saveRules"/>
        <Button text="Cancelar" onAction="#cancel"/>
    </HBox>
</VBox>
</AnchorPane>