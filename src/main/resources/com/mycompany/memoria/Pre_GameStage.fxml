<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:id="pane_game" prefHeight="700.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.memoria.Pre_GameController">
   <children>
      <VBox layoutX="70.0" layoutY="102.0" prefHeight="536.0" prefWidth="404.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="199.0">
               <children>
                  <Label text="Conjunto de cartas a reconocer: ">
                     <tooltip>
                        <Tooltip text="Cantidad de cartas iguales que deben seleccionarse para sumar puntos" />
                     </tooltip></Label>
                  <TextField fx:id="txtfield_cardMatching" disable="true" prefHeight="52.0" prefWidth="39.0" text="2" />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="btn_incrementCardMatching" mnemonicParsing="false" onAction="#incrementCardMatching" prefHeight="25.0" prefWidth="48.0" text="+" />
                        <Button fx:id="btn_decrementCardMatching" mnemonicParsing="false" onAction="#decrementCardMatching" prefHeight="25.0" prefWidth="48.0" text="-" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Cantidad de Cartas: " />
                  <TextField fx:id="textfield_amountCards" disable="true" prefHeight="51.0" prefWidth="43.0" text="4" />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="btn_incrementCards" mnemonicParsing="false" onAction="#incrementCards" prefWidth="48.0" text="+" />
                        <Button fx:id="btn_decrementCards" mnemonicParsing="false" onAction="#decrementCards" prefWidth="48.0" text="-" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="48.0" prefWidth="340.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="chkb_punishment" mnemonicParsing="false" text="Castigo">
                     <tooltip>
                        <Tooltip text="Resta puntos si se falla la primera pareja del turno" />
                     </tooltip>
                  </CheckBox>
                  <CheckBox fx:id="chkb_bonus" mnemonicParsing="false" text="Bonus">
                     <tooltip>
                        <Tooltip text="Puntos Aumentados por racha de parejas" />
                     </tooltip>
                  </CheckBox>
                  <CheckBox fx:id="chkb_godMode" mnemonicParsing="false" text="Modo Revisión">
                     <tooltip>
                        <Tooltip text="Permite ver las cartas con click derecho" />
                     </tooltip>
                  </CheckBox>
                  <CheckBox mnemonicParsing="false" text="Tiempo límite" />
               </children>
            </HBox>
            <HBox prefHeight="52.0" prefWidth="404.0">
               <children>
                  <VBox prefHeight="52.0" prefWidth="199.0">
                     <children>
                        <Label text="Minutos" />
                        <Spinner />
                     </children>
                  </VBox>
                  <VBox prefHeight="52.0" prefWidth="205.0">
                     <children>
                        <Label text="Segundos" />
                        <Spinner />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btn_play" mnemonicParsing="false" onAction="#showGame" prefHeight="124.0" prefWidth="207.0" text="Iniciar" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="893.0" layoutY="75.0" prefHeight="585.0" prefWidth="357.0">
         <children>
            <TableView fx:id="tbl_globalscores"  prefHeight="594.0" prefWidth="357.0">
              <columns>
                <TableColumn fx:id="col_playerName" prefWidth="231.0" text="Nombre" >
                   <cellValueFactory>
                      <PropertyValueFactory property="playerName"/>
                   </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="col_playerScore" prefWidth="125.0" text="Puntaje">
                   <cellValueFactory>
                      <PropertyValueFactory property="totalScore"/>
                   </cellValueFactory>
                </TableColumn>
              </columns>

            </TableView>
         </children>
      </VBox>
      <VBox fx:id="vbox_addplayers" layoutX="474.0" layoutY="94.0" prefHeight="585.0" prefWidth="327.0">
         <children>
            <Button fx:id="btn_addPlayer" mnemonicParsing="false" onAction="#add_player" text="Añadir Jugador" />
            <Button fx:id="btn_addBot" mnemonicParsing="false" onAction="#add_cpu" prefHeight="25.0" prefWidth="97.0" text="Añadir CPU" />
         </children>
      </VBox>
   </children>
</AnchorPane>
